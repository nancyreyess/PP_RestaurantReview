@model IEnumerable<PP_RestaurantReview.Models.ReviewDto>
@{
    ViewBag.Title = "List";
}

<h2>List of Reviews</h2>

<a href="/Review/New"> Add New Review </a>

@foreach (var review in Model)
{
    <h3> <a href="/Review/Details/@review.ReviewId">@review.RestaurantName by @review.UserId on @review.ReviewDate</a></h3>
    <div>@review.ReviewRating / 5 </div>
    <div>@review.ReviewComment</div>
}